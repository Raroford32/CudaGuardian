modules = ["cuda", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Benchmarks"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install CUDA"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup and Optimize CUDA"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup and Optimize CUDA Simulation"

[[workflows.workflow]]
name = "Run Benchmarks"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash run_benchmarks.sh"

[[workflows.workflow]]
name = "Install CUDA"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "nvcc --version && nvidia-smi"

[[workflows.workflow]]
name = "Setup and Optimize CUDA"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_and_optimize_cuda.sh"

[[workflows.workflow]]
name = "Setup and Optimize CUDA Simulation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_and_optimize_cuda.sh"

[deployment]
run = ["sh", "-c", "bash run_benchmarks.sh"]
